"""
class forma_geometrica(ABC):
    @abstractmethod
    def area(self):
        pass
    @abstractmethod
    def perimetro(self):
        pass

class rectangulo(forma_geometrica):
    def __init__(self, base, altura):
        self.base = base
        self.altura = altura
    
    def area(self):
        return self.base * self.altura
    
    def perimetro(self):
        return self.base * 2 + self.altura * 2

class circulo(forma_geometrica):
    def __init__(self, radio):
        self.radio = radio
    
    def area(self):
        return 3.14*self.radio**2
    def perimetro(self):
        return 2*3.14*self.radio

r = rectangulo(5,10)
print(r.area())
print(r.perimetro())
c = circulo(3)
print(c.area())
print(c.perimetro())
