"""
import threading


def worker(barrier):
    print("worker starter")

    barrier.wait()

    print("Barrier crossed")


 
if __name__ == "__main__":
    num_threads = 4

    barrier = threading.Barrier(num_threads)
    threads = [threading.Thread (target=worker, args=(barrier,)) for i in range(num_threads)]
    for x in threads:
        x.start()

    for x in threads:
        x.join()
