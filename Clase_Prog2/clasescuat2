#@property
def registro_llamadas(funcion):
    def wrapper(*args, **kwargs):
        resultado = funcion(*args, **kwargs)
        print(f"Llamada {funcion.__name__} con argumentos {args} y {kwargs}, resultado {resultado}")
        return resultado
    return wrapper

@registro_llamadas
def sumar(a,b):
    return a + b

resultado_suma = sumar(3,4)
