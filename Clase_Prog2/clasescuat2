#Generadores
def siguiente():
    a = 0
    while True:
        yield a
        a+=1

ahora = siguiente()
lista = []
for x in range(10):
    lista.append(next(ahora))

#Comprensiones
lista = [x ** 2 for x in lista]
print(lista)



#Decoradores
def ciertamente(variable):
    def wrap(*argumentos):
        resultado = variable(*argumentos)
        print("mismuertos", argumentos, resultado)
        return resultado
    return wrap

@ciertamente
def sumar(a, b):
    return a+b

